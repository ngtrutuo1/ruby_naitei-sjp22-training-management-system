<% provide(:title, t(".edit_user")) %>
<% provide(:button_text, t(".save_change")) %>
<h2><%= t(".update_profile") %></h2>

  <div class="row">
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <div>
        <%= link_to t(".change"), Settings.links.gravatar_email, target: "_blank" %>
      </div>
    </div>
    <div class="col-md-6 col-md-offset-2">
      <%= render partial: "form", locals: { users_custom_path: user_path(@user) } %>
    </div>
  </div>
